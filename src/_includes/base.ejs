<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>

    <!-- Stylesheets -->
    <% if(process.env.ELEVENTY_ENV.trim() === 'production') {%> 
        <% for(file of data.css) %> 
            <link rel="stylesheet" href="./static/<%= file %>">
    <% } %> 

    <!-- Google Fonts -->
